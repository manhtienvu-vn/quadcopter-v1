#ifndef INC_PID_H_
#define INC_PID_H_

typedef struct {

	/* Parameters */
	float Kp;
	float Ki;
	float Kd;
	float tau;

	float setpoint;

	float dt;

	float integration;
	float differentiation;
	float propotional;

	float measurement;
	float prev_measurement;

	float error;
	float prev_error;

	float output;
	float output_limit;

	float integral_limit;
	float diff_limit;
	float pro_limit;

} PID;

void PID_Init(PID *pid);
void PID_SetParameters(PID *pid, float kp, float ki, float kd, float setpoint, float tau, float measurement);
void PID_Update(PID *pid, float measurement, float dt);
float PID_Compute(PID *pid);


#endif /* INC_PID_H_ */
