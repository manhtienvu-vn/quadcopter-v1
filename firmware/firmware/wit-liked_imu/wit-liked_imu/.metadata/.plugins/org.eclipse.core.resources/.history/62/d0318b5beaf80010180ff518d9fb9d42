#ifndef INC_PID_H_
#define INC_PID_H_

typedef struct {

	float Kp;
	float Ki;
	float Kd;

	float setpoint;

	float dt;

	float integral;
	float differentiative;
	float propotional;

	float measurement;
	float error;
	float prev_error;

	float output;

	float integral_limit;
	float diff_limit;
	float pro_limit;

} PID;

void PID_Init(PID *pid);
void PID_SetParameters(float kp, float ki, float kd, float setpoint, float measurement);
void PID_Compute();


#endif /* INC_PID_H_ */
